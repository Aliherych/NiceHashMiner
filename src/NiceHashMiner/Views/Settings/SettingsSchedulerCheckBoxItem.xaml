<UserControl x:Class="NiceHashMiner.Views.Settings.SettingsSchedulerCheckBoxItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NiceHashMiner.Views.Settings"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="400">
    <ToggleButton Style="{StaticResource InvisibleToggleButton}" x:Name="ToggleButtonHidden" Click="ToggleClickHandler" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Center" >
        <StackPanel Orientation="Horizontal"
                DataContext="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:SettingsSchedulerCheckBoxItem}}}" VerticalAlignment="Center" Margin="0,5,0,0">
            <CheckBox Style="{StaticResource NHMSwitch}"
                  x:Name="checkBoxScheduler"
                  Click="ToggleClickHandler"
                  IsChecked="{Binding Enabled}" />
            <TextBlock Text="{Binding Label}" Style="{StaticResource FontsTypography.Caption-Primary}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="8,0,16,0"/>
        </StackPanel>
    </ToggleButton>
</UserControl>
